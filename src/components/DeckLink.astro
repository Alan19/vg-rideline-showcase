---
import type {ImageMetadata} from "astro";
interface Props {
    id: string;
    art: ImageMetadata;
    title: string;
}

import { Picture } from 'astro:assets';
const {art, id, title} = Astro.props
---
<script>
    import "beercss";
    import "material-dynamic-colors";
</script>
<link href="/src/styles/showcase.css" rel="stylesheet" type="text/css"/>
<a href={`/decks/${id}/`} style="display: contents">
    <article class="no-padding border">
        <Picture formats={['webp', 'avif']} src={art} alt={title} class="responsive medium" transition:name={`img_${title}`} style={{objectPosition: "top", objectFit: "cover"}} />
        <div class="absolute bottom left right padding bottom-shadow white-text" transition:animate="none">
            <nav>
                <h6>{title}</h6>
            </nav>
        </div>
    </article>
</a>
